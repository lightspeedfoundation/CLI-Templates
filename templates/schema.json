{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/lightspeedfoundation/CLI-Templates/templates/schema.json",
  "title": "CLI Template Entry",
  "type": "object",
  "additionalProperties": false,
  "required": ["name", "slug", "category", "repository", "projectXHandle", "createdAt"],
  "properties": {
    "name": { "type": "string", "minLength": 1 },
    "slug": { "type": "string", "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$" },
    "category": { "type": "string", "enum": ["AI", "App", "Bot", "Game"] },
    "description": { "type": "string" },
    "tags": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 },
      "uniqueItems": true
    },
    "projectXHandle": { "type": "string", "minLength": 1 },
    "createdAt": { "type": "string", "format": "date-time" },
    "repository": {
      "type": "object",
      "additionalProperties": false,
      "required": ["url"],
      "properties": {
        "url": { "type": "string", "pattern": "^(https?:\\/\\/|git@).+\\.git$" },
        "branch": { "type": "string" }
      }
    }
  }
}

